rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // USERS COLLECTION
    match /users/{userId} {
      // Allow anyone to read user documents
      allow read: if true;

      // Disable all writes
      allow create, update, delete: if false;

      // Deposits subcollection under user
      match /deposits/{depositId} {
        // Allow read only by the authenticated owner
        allow read: if request.auth != null && request.auth.uid == userId;

        // Disable all writes
        allow create, update, delete: if false;
      }
    }

    // CLANS COLLECTION (read-only)
    match /clans/{clanId} {
      allow read: if true;
      allow create, update, delete: if false;

      match /deposits/{depositId} {
        allow read: if true;
        allow create, update, delete: if false;
      }
    }

    // LEADERBOARD COLLECTION (read-only for everyone)
    match /leaderboard/{docId} {
      allow read: if true;
      allow create, update, delete: if false;
    }
  }
}
